{% extends 'base.html.twig' %}

{% block title %}Détail Voiture{% endblock %}

{% block body %}

<div class="bg-[#21204F] text-white h-20 flex justify-center items-center ">
    <h1 class=" text-2xl sm:text-5xl font-extrabold text-[#BBCED2]">TA VOITURE EN DETAILS</h1>
</div>
<div class="flex justify-center">
    <div class="flex flex-col items-center justify-center border-4 border-gray-200 rounded-lg shadow m-6 p-2 md:flex-row md:w-1/2 md:w-3/4">
        <img class="rounded w-auto h-full md:w-4/5 "src="{{ asset(car.image)}}" />
        <div class="flex flex-col justify-center p-4 w-48 h-full"> 
            <h5 class="mb-2 sm:text-2xl font-bold ">{{ car.brand }}</h5>
            <p class="mb-3 ">{{ car.model }}</p>
        </div>
    </div>
</div>
<div class="flex items-center justify-center gap-2">
     <a href="{{ path('app_car_edit', {'id': car.id}) }}"class="inline-flex w-36 justify-center items-center px-2 py-2 text-sm font-medium text-center text-white bg-[#21204F] rounded-lg border-solid border-2 hover:text-[#BBCED2] hover:border-[#BBCED2]">Modifier &nbsp;
        <svg class="w-3.5 h-3.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 21 21">
         <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.418 17.861 1 20l2.139-6.418m4.279 4.279 10.7-10.7a3.027 3.027 0 0 0-2.14-5.165c-.802 0-1.571.319-2.139.886l-10.7 10.7m4.279 4.279-4.279-4.279m2.139 2.14 7.844-7.844m-1.426-2.853 4.279 4.279"/>
     </svg>
    </a>
    {{ include('car/_delete_form.html.twig') }}
</div>
<div class="flex justify-center h-20 items-center">
    <a href="{{ path('app_car_index') }}" class="font-bold text-[#21204F] hover:text-[#BBCED2]">Retour à la collection</a>
 </div>     
  
{% endblock %}
